(*********** version with composition ************)



let all = [^]*
let Title = [0-9a-zA-z ]+
let Content = (all - (all.("\\subsection"|"\\section"|"\\end{document}"|"\n*").all))
let H1 = all - (all."\\begin{document}".all)
let H = H1."\\begin{document}".Content
let E = "\\end{document}".all


let chunk_subsection_comp =
default
  (del "\\subsection{". ins "**".
  key Title.
  del "}".
  del Content)
"\\subsection{NO NAME}\n ***TO BE WRITTEN***\n\n" 


let extract_subsections_comp = (ins"\n" . <subsect:chunk_subsection_comp>)*




let prefix_chunk_section = 
default
  (del "\\section{". ins "*".
  key Title.
  del "}".
  del Content)
"\\section{NO NAME}\n ***TO BE WRITTEN***\n\n" 



let chunk_section_comp =
(ctype prefix_chunk_section . extract_subsections_comp);
(<sect:prefix_chunk_section> . atype extract_subsections_comp)

let sections_comp = chunk_section_comp . (ins "\n" . chunk_section_comp)*

let extract_titles_comp =  del H . sections_comp? . del E




