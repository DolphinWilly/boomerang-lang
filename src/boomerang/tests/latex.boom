let all = [^]*
let Title = [0-9a-zA-z ]+
let Content = all - (all.("\\subsection"|"\\section"|"\\end{document}").all)
let H1 = all - (all."\\begin{document}".all)
let H = H1."\\begin{document}".Content
let E = "\\end{document}".all



let chunk_subsection =
default
  (del "\\subsection{". ins "**".
  key Title.
  del "}".
  del Content)
"\\subsection{NO NAME}\n ***TO BE WRITTEN***\n\n" 


(* !!!! If you don't use "forgetkey" here, at the 
   next level of matching, the concatenation of titles
   of every subsection will be part of the key
*)
let extract_subsections = forgetkey  (ins"\n" . <chunk_subsection>)*



let chunk_section =
default
  (del "\\section{". ins "*".
  key Title.
  del "}".
  del Content.
  extract_subsections)
"\\section{NO NAME}\n ***TO BE WRITTEN***\n\n" 

let sections = <chunk_section> . (ins "\n" . <chunk_section>)*

let extract_titles =  del H. sections? . del E




